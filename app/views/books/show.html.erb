<div class="jumbotron">
	<div class="container">
		<h1><%= @book.title %></h1>
		<h3>Published in: <%= @book.year %></h3>
		<p>Length: <%= @book.pages %> pages</p>
    <p>Authors: <% @book.authors.each do |author| %>
      <%= author.first_name %>
      <%= author.last_name%><%= ", " unless author == @book.authors.last %>
      <% end %>
    </p>
    <p>Average Review Score: <%= @book.average_rating %> </p>
    <small class="top_three">Top Three Reviews: <% @book.sort_reviews(:desc).each do |review| %>
      "<%= review.title %>"
      Score: <%= review.score%> by <%= review.user.username%>
      <%=". " unless review == @book.sort_reviews(:desc).last%>
      <% end %>
    </small>
    <br>
    <small class="bottom_three">Bottom Three Reviews: <% @book.sort_reviews(:asc).each do |review| %>
      "<%= review.title %>"
      Score: <%= review.score%> by <%= review.user.username%>
      <%=". " unless review == @book.sort_reviews(:asc).last%>
      <% end %>
    </small>
		<br>
		<p>
		<%= link_to 'Delete', book_path(@book), method: "delete" %>
    </p>
	</div>
</div>
<div class="container">
  <h3>Reviews</h3>
  <% @book.reviews.each do |review| %>
    <div class="row">
      <p><b><%= review.title %></b></p>
      <p><b>Average Score: <%= review.score %></b></p>
      <p>User: <%= review.user_id %></p>
      <p>Review: <%= review.explanation %></p>
    </div>
  <% end %>
</div>
