
<div class="jumbotron">
	<div class="container">
		<h1><%= @user.username%></h1>
		<br>
      <div class="dropdown"> sort by: <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Chronological Order<span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="http://localhost:3000/users/<%=@user.id%>?dir=asc">Ascending</a></li>
          <li><a href="http://localhost:3000/users/<%=@user.id%>?dir=desc">Descending</a></li>
        </ul>
      </div>
	</div>
</div>

<div class="container">
  <div class="row">
    <p>Review(s): <% @reviews.each do |review| %>
      <div id="review_<%review.id%>"
      <h3>Title: <%=review.title %>
        <p>Score: <%=review.score%></p>
        <p>Description: <%=review.explanation%></p>
        <%= link_to 'destroy', review_path(review.id), method: :delete %>
      </div>
    <%end%>
    </p>
  </div>
</div>
